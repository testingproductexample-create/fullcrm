# Business Intelligence Dashboard Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
# Get these values from your Supabase project settings
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Configuration
# Your backend API base URL (if using a custom backend)
VITE_API_BASE_URL=https://api.yourdomain.com

# WebSocket Configuration
# WebSocket server URL for real-time updates
VITE_WS_URL=wss://api.yourdomain.com/ws

# Application Configuration
# Your application environment
VITE_APP_ENV=development

# Feature Flags
# Enable/disable specific features
VITE_ENABLE_REALTIME=true
VITE_ENABLE_EXPORTS=true
VITE_ENABLE_ALERTS=true
VITE_ENABLE_NOTIFICATIONS=true

# Analytics Configuration
# Google Analytics or other tracking services
VITE_GA_TRACKING_ID=

# Error Reporting
# Sentry or other error tracking services
VITE_SENTRY_DSN=

# External Services
# Third-party service integrations
VITE_STRIPE_PUBLIC_KEY=
VITE_MAILCHIMP_API_KEY=

# Development Settings
# Development-only configuration
VITE_DEBUG_MODE=true
VITE_MOCK_DATA=false
VITE_API_TIMEOUT=30000

# Cache Configuration
# Data cache settings
VITE_CACHE_DURATION=300000
VITE_ENABLE_CACHE=true

# Security Configuration
# Security-related settings
VITE_CSRF_TOKEN=
VITE_JWT_SECRET=

# File Upload Configuration
# File upload limits and settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf,text/csv

# Localization
# Internationalization settings
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de

# Theme Configuration
# Default theme and customization
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_CUSTOM_BRANDING=false

# Performance Settings
# Performance-related configurations
VITE_CHART_ANIMATION_DURATION=1000
VITE_TABLE_PAGE_SIZE=25
VITE_MAX_CONCURRENT_REQUESTS=5

# Alert Configuration
# Alert system settings
VITE_ALERT_REFRESH_INTERVAL=30000
VITE_MAX_ALERTS_DISPLAY=50
VITE_ALERT_SOUND_ENABLED=true

# Export Configuration
# Data export settings
VITE_EXPORT_TIMEOUT=60000
VITE_MAX_EXPORT_RECORDS=10000
VITE_ENABLE_PDF_WATERMARK=true

# Dashboard Settings
# Default dashboard configuration
VITE_DEFAULT_DASHBOARD_LAYOUT=grid
VITE_ENABLE_DASHBOARD_SAVING=true
VITE_MAX_WIDGETS_PER_DASHBOARD=20

# Notification Settings
# Push notification configuration
VITE_VAPID_PUBLIC_KEY=
VITE_NOTIFICATION_ENABLED=true

# Development Tools
# Development-specific settings
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_LOG_LEVEL=info