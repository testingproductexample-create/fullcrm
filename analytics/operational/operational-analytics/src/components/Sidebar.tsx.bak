import React, { useState } from 'react';
import { Link, useLocation } from 'react-router-dom';
import { useTranslation } from 'react-i18next';
import {
  BarChart3,
  Users,
  Cpu,
  GitBranch,
  Factory,
  CheckCircle,
  Clock,
  FileText,
  Settings,
  Menu,
  X,
  TrendingUp,
  PieChart,
  Activity
} from 'lucide-react';

const navigation = [
  { name: 'dashboard', href: '/', icon: BarChart3 },
  { name: 'employee', href: '/employee', icon: Users },
  { name: 'resource', href: '/resource', icon: Cpu },
  { name: 'workflow', href: '/workflow', icon: GitBranch },
  { name: 'production', href: '/production', icon: Factory },
  { name: 'quality', href: '/quality', icon: CheckCircle },
  { name: 'time', href: '/time', icon: Clock },
  { name: 'reports', href: '/reports', icon: FileText },
  { name: 'settings', href: '/settings', icon: Settings },
];

const Sidebar = () => {
  const [isOpen, setIsOpen] = useState(false);
  const { t } = useTranslation();
  const location = useLocation();

  return (
    <>
      {/* Mobile menu button */}
      <div className="lg:hidden fixed top-4 left-4 z-50">
        <button
          onClick={() => setIsOpen(!isOpen)}
          className="glass-button p-2"
        >
          {isOpen ? <X size={20} /> : <Menu size={20} />}
        </button>
      </div>

      {/* Sidebar */}
      <div className={`
        fixed inset-y-0 left-0 z-40 w-64 glass-dark transform transition-transform duration-300 ease-in-out
        ${isOpen ? 'translate-x-0' : '-translate-x-full'}
        lg:translate-x-0 lg:static lg:inset-0
      `}>
        <div className="flex flex-col h-full">
          {/* Logo */}
          <div className="flex items-center justify-center h-16 px-4 border-b border-white/10">
            <div className="flex items-center space-x-2">
              <Activity className="h-8 w-8 text-blue-400" />
              <div>
                <h1 className="text-lg font-bold text-white">Analytics Pro</h1>
                <p className="text-xs text-gray-300">Operational Excellence</p>
              </div>
            </div>
          </div>

          {/* Navigation */}
          <nav className="flex-1 px-4 py-6 space-y-2">
            {navigation.map((item) => {
              const isActive = location.pathname === item.href;
              const Icon = item.icon;
              
              return (
                <Link
                  key={item.name}
                  to={item.href}
                  onClick={() => setIsOpen(false)}
                  className={`
                    flex items-center px-4 py-3 text-sm font-medium rounded-lg transition-all duration-200
                    ${isActive
                      ? 'bg-blue-500/20 text-blue-400 border border-blue-400/30'
                      : 'text-gray-300 hover:bg-white/10 hover:text-white'
                    }
                  `}
                >
                  <Icon className={`mr-3 h-5 w-5 ${isActive ? 'text-blue-400' : ''}`} />
                  {t(`nav.${item.name}`)}
                </Link>
              );
            })}
          </nav>

          {/* Performance Overview */}
          <div className="p-4 border-t border-white/10">
            <div className="glass p-3 rounded-lg">
              <div className="flex items-center justify-between mb-2">
                <span className="text-sm text-gray-300">Overall Performance</span>
                <TrendingUp className="h-4 w-4 text-green-400" />
              </div>
              <div className="flex items-center space-x-2">
                <div className="flex-1 bg-gray-700 rounded-full h-2">
                  <div className="bg-gradient-to-r from-green-400 to-blue-500 h-2 rounded-full" style={{ width: '85%' }}></div>
                </div>
                <span className="text-sm font-medium text-white">85%</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Overlay for mobile */}
      {isOpen && (
        <div
          className="fixed inset-0 bg-black/50 z-30 lg:hidden"
          onClick={() => setIsOpen(false)}
        />
      )}
    </>
  );
};

export default Sidebar;