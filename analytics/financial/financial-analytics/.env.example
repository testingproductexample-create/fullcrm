# Financial Analytics System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (found in project settings)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anonymous/public key (found in project settings > API)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (found in project settings > API)
# WARNING: Keep this secret! Only use on server-side
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Secret key for JWT token signing (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters

# JWT token expiration time
JWT_EXPIRES_IN=7d

# JWT refresh token expiration (in days)
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port for the backend API server
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# Server host (usually localhost for development)
HOST=localhost

# =============================================================================
# API SECURITY & RATE LIMITING
# =============================================================================
# Rate limit per IP address (requests per window)
API_RATE_LIMIT=100

# Rate limit window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Maximum request payload size (in bytes)
MAX_REQUEST_SIZE=10485760

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection pool size
DB_POOL_SIZE=20

# Database connection timeout (in milliseconds)
DB_TIMEOUT=30000

# Database statement timeout (in milliseconds)
DB_STATEMENT_TIMEOUT=60000

# Enable database query logging
DB_LOGGING=false

# =============================================================================
# CURRENCY & EXCHANGE RATES
# =============================================================================
# Base currency for all financial calculations
BASE_CURRENCY=AED

# List of supported currencies (comma-separated)
SUPPORTED_CURRENCIES=AED,USD,EUR,GBP,SAR,QAR,KWD,OMR,BHD

# Exchange rate update interval (in seconds)
CURRENCY_UPDATE_INTERVAL=3600

# Exchange rate API provider (e.g., fixer, exchangerate-api, currencylayer)
EXCHANGE_RATE_PROVIDER=exchangerate-api

# Exchange rate API key (if required by provider)
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# =============================================================================
# ALERT SYSTEM CONFIGURATION
# =============================================================================
# Alert check interval (in seconds)
ALERT_CHECK_INTERVAL=300

# Maximum alerts per user
MAX_ALERTS_PER_USER=50

# Alert notification methods (email, sms, push)
ALERT_NOTIFICATION_METHODS=email,push

# Email service configuration (for alert notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# FORECASTING CONFIGURATION
# =============================================================================
# Default forecasting algorithm
DEFAULT_FORECAST_ALGORITHM=linear_regression

# Forecasting data retention period (in months)
FORECAST_DATA_RETENTION=24

# Maximum forecast periods
MAX_FORECAST_PERIODS=12

# Minimum data points required for forecasting
MIN_DATA_POINTS_FOR_FORECAST=12

# =============================================================================
# REPORTING CONFIGURATION
# =============================================================================
# Report generation timeout (in milliseconds)
REPORT_GENERATION_TIMEOUT=30000

# Maximum concurrent report generations
MAX_CONCURRENT_REPORTS=5

# Default report format (pdf, excel, csv)
DEFAULT_REPORT_FORMAT=pdf

# Report storage location (local, s3, supabase-storage)
REPORT_STORAGE=local

# =============================================================================
# UAE VAT COMPLIANCE
# =============================================================================
# UAE VAT rate (currently 5%)
UAE_VAT_RATE=0.05

# VAT filing periods (monthly, quarterly, annually)
VAT_FILING_PERIODS=monthly,quarterly,annually

# VAT return due days after period end
VAT_RETURN_DUE_DAYS=30

# Enable VAT validation
VAT_VALIDATION_ENABLED=true

# =============================================================================
# BACKUP & ARCHIVAL
# =============================================================================
# Database backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Data retention period (in years)
DATA_RETENTION_YEARS=7

# Enable automatic data archival
AUTO_ARCHIVAL_ENABLED=true

# Archival threshold (records older than X years)
ARCHIVAL_THRESHOLD_YEARS=3

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log format (json, simple)
LOG_FORMAT=json

# Enable request logging
REQUEST_LOGGING=true

# Enable performance monitoring
PERFORMANCE_MONITORING=true

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# From email address for system notifications
FROM_EMAIL=noreply@yourdomain.com

# Support email address
SUPPORT_EMAIL=support@yourdomain.com

# Company name for email signatures
COMPANY_NAME=Your Company Name

# =============================================================================
# FILE STORAGE
# =============================================================================
# File upload maximum size (in bytes, default 10MB)
MAX_FILE_SIZE=10485760

# Allowed file types for uploads (comma-separated)
ALLOWED_FILE_TYPES=pdf,xlsx,csv,jpg,png

# Storage provider (local, s3, supabase-storage)
STORAGE_PROVIDER=supabase-storage

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds
CACHE_TTL=3600

# Enable query result caching
ENABLE_QUERY_CACHE=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable API documentation
ENABLE_API_DOCS=true

# Enable mock data for development
USE_MOCK_DATA=false

# Enable hot reload for development
HOT_RELOAD=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable HTTPS only in production
FORCE_HTTPS=false

# Session timeout (in minutes)
SESSION_TIMEOUT=480

# Enable two-factor authentication
ENABLE_2FA=false

# Password policy configuration
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Business name for reports and emails
BUSINESS_NAME=Your Business Name

# Business registration number
BUSINESS_REG_NUMBER=your_reg_number

# Tax identification number
TAX_ID_NUMBER=your_tax_id

# Business address
BUSINESS_ADDRESS=123 Business Street, City, Country

# =============================================================================
# INTEGRATIONS
# =============================================================================
# QuickBooks integration (optional)
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
QUICKBOOKS_REDIRECT_URI=http://localhost:3001/api/integrations/quickbooks/callback

# Xero integration (optional)
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
XERO_REDIRECT_URI=http://localhost:3001/api/integrations/xero/callback

# =============================================================================
# ADVANCED FEATURES
# =============================================================================
# Enable machine learning features
ENABLE_ML_FEATURES=true

# Enable blockchain audit trail
ENABLE_BLOCKCHAIN_AUDIT=false

# Enable real-time notifications
ENABLE_REAL_TIME_NOTIFICATIONS=true

# WebSocket connection timeout (in milliseconds)
WEBSOCKET_TIMEOUT=30000

# =============================================================================
# COMPLIANCE & REGULATIONS
# =============================================================================
# Enable GDPR compliance features
ENABLE_GDPR_COMPLIANCE=false

# Data processing consent required
REQUIRE_DATA_CONSENT=true

# Enable audit trail
ENABLE_AUDIT_TRAIL=true

# Audit log retention period (in years)
AUDIT_LOG_RETENTION_YEARS=7
