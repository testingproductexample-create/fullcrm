# Environment Configuration
NODE_ENV=development
PORT=3000

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Base URL for share links
BASE_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=secure_file_storage
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_FORCE_SYNC=false

# JWT Configuration
JWT_SECRET=secure_jwt_secret_key_very_long_and_random_here
JWT_EXPIRES_IN=24h

# File Storage Configuration
STORAGE_PATH=./secure_storage
THUMBNAIL_PATH=./thumbnails
QUARANTINE_PATH=./quarantine
TEMP_PATH=./temp
TEMP_SCAN_PATH=/tmp

# File Upload Limits
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/csv

# Storage Quotas
DISK_QUOTA=1073741824
FILE_RETENTION_DAYS=365

# Antivirus Configuration
ANTIVIRUS_ENABLED=true
CLAMAV_HOST=127.0.0.1
CLAMAV_PORT=3310

# Cleanup Configuration
AUDIT_RETENTION_DAYS=90
SECURITY_AUDIT_RETENTION_DAYS=365
QUARANTINE_RETENTION_DAYS=30

# Default Admin User
CREATE_DEFAULT_ADMIN=true
DEFAULT_ADMIN_EMAIL=admin@securefiles.com
DEFAULT_ADMIN_PASSWORD=Admin123!

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@securefiles.com

# Redis Configuration (for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
SESSION_SECRET=secure_session_secret_very_long_and_random_here
CSRF_SECRET=csrf_secret_key_here

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
DOWNLOAD_RATE_LIMIT_WINDOW=60
DOWNLOAD_RATE_LIMIT_MAX=20

# API Versioning
API_VERSION=v1

# Feature Flags
ENABLE_FILE_SHARING=true
ENABLE_BULK_OPERATIONS=true
ENABLE_VIRUS_SCANNING=true
ENABLE_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true

# Development Settings
DEBUG=secure-file-storage:*
CORS_ORIGIN=http://localhost:3001