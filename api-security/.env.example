# API Security System Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
DASHBOARD_PORT=3002

# Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production
API_KEY_ENCRYPTION_KEY=your-api-key-encryption-key

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com
CORS_MAX_AGE=86400

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STRICT_RATE_LIMIT_MAX=10
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Webhook Security
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
WEBHOOK_GENERIC_SECRET=your_generic_webhook_secret
WEBHOOK_TIMEOUT=300000

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=30d
LOG_DIRECTORY=logs

# API Key Management
API_KEY_MAX_PER_USER=10
API_KEY_DEFAULT_EXPIRY=30d
API_KEY_SALT_ROUNDS=12
API_KEY_LENGTH=32

# Security Alert System
ALERT_MAX_PER_HOUR=100
ALERT_MAX_PER_DAY=1000
ALERT_DUPLICATE_THRESHOLD=5000
ALERT_CLEANUP_INTERVAL=60

# Database (if using external storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/api_security
# REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
METRICS_RETENTION_DAYS=30
REAL_TIME_UPDATE_INTERVAL=30000

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# ALERT_EMAIL_RECIPIENTS=admin@yourdomain.com,security@yourdomain.com

# External Services (optional)
# WEBHOOK_NOTIFICATION_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# WEBHOOK_NOTIFICATION_SECRET=your_webhook_notification_secret

# Feature Flags
ENABLE_API_VERSIONING=true
ENABLE_WEBHOOK_VALIDATION=true
ENABLE_IP_WHITELIST=false
ENABLE_ADVANCED_RATE_LIMITING=true
ENABLE_SECURITY_ALERTS=true
ENABLE_API_KEY_ROTATION=true

# Development Settings
DEBUG=true
MOCK_EXTERNAL_SERVICES=false