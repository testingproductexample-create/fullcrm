{
  "name": "UAE Tailoring CRM - Complete Business Management",
  "short_name": "Tailoring CRM",
  "description": "Comprehensive business management platform for UAE tailoring businesses with offline capabilities",
  "start_url": "/dashboard",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#8b5cf6",
  "orientation": "portrait",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["business", "productivity", "finance"],
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "New Order",
      "short_name": "New Order",
      "description": "Create a new tailoring order",
      "url": "/dashboard/orders/new",
      "icons": [
        {
          "src": "/icons/shortcut-order.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Appointments",
      "short_name": "Appointments",
      "description": "View and manage appointments",
      "url": "/dashboard/appointments",
      "icons": [
        {
          "src": "/icons/shortcut-appointment.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Customers",
      "short_name": "Customers",
      "description": "Manage customer information",
      "url": "/dashboard/customers",
      "icons": [
        {
          "src": "/icons/shortcut-customer.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Mobile Scanner",
      "short_name": "Scanner",
      "description": "Scan documents and measurements",
      "url": "/mobile/scanner",
      "icons": [
        {
          "src": "/icons/shortcut-scanner.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard overview on desktop"
    },
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile dashboard"
    },
    {
      "src": "/screenshots/mobile-orders.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Order management on mobile"
    },
    {
      "src": "/screenshots/mobile-scanner.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile document scanner"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/dashboard/communication/compose?to=%s"
    },
    {
      "protocol": "tel",
      "url": "/dashboard/customers/call?phone=%s"
    }
  ],
  "share_target": {
    "action": "/mobile/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://tailoring-crm.vercel.app/manifest.json"
    }
  ],
  "prefer_related_applications": false
}