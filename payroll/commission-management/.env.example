# Environment Configuration for Commission Management System
# Copy this file to .env and update with your actual values

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Application Configuration
VITE_APP_NAME="UAE Commission Management System"
VITE_APP_VERSION="2.0.0"
VITE_APP_ENVIRONMENT="development" # development, staging, production

# Currency Configuration
VITE_DEFAULT_CURRENCY="AED"
VITE_CURRENCY_SYMBOL="د.إ"
VITE_CURRENCY_LOCALE="en-AE"

# Internationalization
VITE_DEFAULT_LANGUAGE="en"
VITE_SUPPORTED_LANGUAGES="en,ar"
VITE_ENABLE_RTL=true

# API Configuration
VITE_API_BASE_URL="https://your-project.supabase.co"
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3

# Payment Gateway Configuration
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Email Configuration (for notifications)
VITE_SMTP_HOST=your_smtp_host_here
VITE_SMTP_PORT=587
VITE_SMTP_USER=your_smtp_user_here
VITE_SMTP_PASS=your_smtp_password_here
VITE_FROM_EMAIL=noreply@yourcompany.ae

# Feature Flags
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_AUTOMATED_SCHEDULING=true
VITE_ENABLE_PAYMENT_GATEWAYS=true
VITE_ENABLE_AUDIT_LOGGING=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# Security Configuration
VITE_ENABLE_2FA=false
VITE_SESSION_TIMEOUT=3600
VITE_ENABLE_CSRF_PROTECTION=true

# Analytics and Monitoring
VITE_ANALYTICS_ID=your_analytics_id_here
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_ENABLE_ERROR_TRACKING=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760 # 10MB in bytes
VITE_ALLOWED_FILE_TYPES="pdf,csv,xlsx,html"
VITE_ENABLE_FILE_ENCRYPTION=true

# Development Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_ENABLE_MOCK_DATA=true

# UAE-Specific Configuration
VITE_UAE_TIMEZONE="Asia/Dubai"
VITE_UAE_FISCAL_YEAR_START="2025-01-01"
VITE_UAE_VAT_RATE=5
VITE_UAE_COMPLIANCE_MODE=true

# Backup and Storage
VITE_ENABLE_AUTO_BACKUP=true
VITE_BACKUP_RETENTION_DAYS=90
VITE_STORAGE_PROVIDER="supabase" # supabase, aws, google

# Performance Configuration
VITE_ENABLE_CACHING=true
VITE_CACHE_DURATION=300000 # 5 minutes in milliseconds
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_PWA=true

# Notification Settings
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_SMS_NOTIFICATIONS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_WEB_PUSH_PUBLIC_KEY=your_web_push_public_key_here

# Third-party Integrations
VITE_WHATSAPP_API_KEY=your_whatsapp_api_key_here
VITE_SLACK_WEBHOOK_URL=your_slack_webhook_url_here
VITE_TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Legal and Compliance
VITE_PRIVACY_POLICY_URL=https://yourcompany.ae/privacy-policy
VITE_TERMS_OF_SERVICE_URL=https://yourcompany.ae/terms-of-service
VITE_DATA_RETENTION_POLICY_DAYS=2555 # 7 years in days for UAE compliance

# Rate Limiting
VITE_API_RATE_LIMIT=1000 # requests per hour
VITE_PAYMENT_RATE_LIMIT=100 # payments per hour
VITE_TEMPLATE_IMPORT_LIMIT=50 # templates per hour

# Advanced Features
VITE_ENABLE_AI_INSIGHTS=false
VITE_ENABLE_BLOCKCHAIN_INTEGRATION=false
VITE_ENABLE_ML_OPTIMIZATION=false
VITE_ENABLE_VOICE_COMMANDS=false

# Testing Configuration
VITE_TEST_DATA_GENERATION=true
VITE_MOCK_PAYMENT_GATEWAYS=true
VITE_ENABLE_DEBUG_TOOLS=true

# Production Security
VITE_CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'"
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true
VITE_ENABLE_SECURITY_HEADERS=true

# Error Handling
VITE_ERROR_REPORTING_URL=your_error_reporting_url_here
VITE_ENABLE_GLOBAL_ERROR_HANDLER=true
VITE_ERROR_LOG_RETENTION_DAYS=30

# Localization
VITE_DATE_FORMAT="DD/MM/YYYY"
VITE_TIME_FORMAT="24h" # 12h or 24h
VITE_NUMBER_DECIMAL_PLACES=2
VITE_NUMBER_GROUPING_ENABLED=true

# Mobile App Configuration
VITE_ENABLE_MOBILE_APP=false
VITE_MOBILE_APP_STORE_URL=""
VITE_PUSH_NOTIFICATION_KEY=your_push_notification_key_here

# Backup and Recovery
VITE_BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
VITE_BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
VITE_ENABLE_DISASTER_RECOVERY=false

# API Documentation
VITE_API_DOCS_URL=https://your-docs-url.com
VITE_ENABLE_API_PLAYGROUND=true
VITE_API_SPEC_VERSION="v2"

# Monitoring and Alerts
VITE_ALERT_EMAIL=admin@yourcompany.ae
VITE_MONITORING_THRESHOLD_CPU=80
VITE_MONITORING_THRESHOLD_MEMORY=85
VITE_MONITORING_THRESHOLD_DISK=90

# Custom Branding
VITE_COMPANY_NAME="Your Company Name"
VITE_COMPANY_LOGO_URL="/logo.png"
VITE_COMPANY_PRIMARY_COLOR="#3B82F6"
VITE_COMPANY_SECONDARY_COLOR="#8B5CF6"

# Feature Toggles for Different User Roles
VITE_ENABLE_ADMIN_FEATURES=true
VITE_ENABLE_MANAGER_FEATURES=true
VITE_ENABLE_EMPLOYEE_FEATURES=true
VITE_ENABLE_AUDITOR_FEATURES=true

# Custom CSS Variables (if using custom theming)
VITE_THEME_PRIMARY_COLOR="--color-primary"
VITE_THEME_SECONDARY_COLOR="--color-secondary"
VITE_THEME_ACCENT_COLOR="--color-accent"
VITE_THEME_BACKGROUND_COLOR="--color-background"
VITE_THEME_SURFACE_COLOR="--color-surface"

# Build Configuration
VITE_BUILD_TARGET="es2015"
VITE_BUILD_MINIFY=true
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_ANALYZER=false

# Service Worker Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_SW_CACHE_VERSION="v2.0.0"
VITE_SW_CACHE_PAGES=true
VITE_SW_CACHE_API=true

# Database Configuration
VITE_DB_POOL_SIZE=10
VITE_DB_CONNECTION_TIMEOUT=30000
VITE_DB_IDLE_TIMEOUT=600000
VITE_DB_MAX_LIFETIME=1800000

# Redis Configuration (if using Redis for caching)
VITE_REDIS_URL=redis://localhost:6379
VITE_REDIS_PASSWORD=your_redis_password_here
VITE_REDIS_DB=0

# Logging Configuration
VITE_LOG_TO_FILE=false
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_DATABASE=true
VITE_LOG_LEVEL_CONSOLE="info"
VITE_LOG_LEVEL_DATABASE="debug"

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_WEB_VITALS_SAMPLING_RATE=0.1
VITE_ENABLE_RUM=true

# Security Headers
VITE_HSTS_MAX_AGE=31536000
VITE_XSS_PROTECTION="1; mode=block"
VITE_CONTENT_TYPE_OPTIONS="nosniff"
VITE_X_FRAME_OPTIONS="DENY"

# Custom Development Tools
VITE_ENABLE_REACT_DEVTOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_MOBX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true