{
  "communication_templates": {
    "incident_notification": {
      "title": "Security Incident Notification",
      "description": "Initial incident notification template",
      "channels": ["email", "slack", "teams", "sms"],
      "templates": {
        "email": {
          "subject": "[URGENT] Security Incident: {incident_id} - {severity}",
          "body": {
            "header": "SECURITY INCIDENT ALERT",
            "content": "A security incident has been detected and requires immediate attention.",
            "details": {
              "incident_id": "Incident ID: {incident_id}",
              "severity": "Severity Level: {severity}",
              "type": "Incident Type: {incident_type}",
              "detection_time": "Detection Time: {detection_time}",
              "affected_systems": "Affected Systems: {affected_systems}",
              "status": "Current Status: {status}"
            },
            "immediate_actions": "The incident response team has been activated. Please monitor for further updates.",
            "contact": "For questions, contact: {contact_info}",
            "dashboard_link": "Dashboard: {dashboard_url}"
          },
          "footer": "This is an automated notification from the Security Incident Response System."
        },
        "slack": {
          "message": "ðŸš¨ *SECURITY INCIDENT ALERT* ðŸš¨\\n\\n*Incident ID:* {incident_id}\\n*Severity:* {severity}\\n*Type:* {incident_type}\\n*Detected:* {detection_time}\\n*Systems:* {affected_systems}\\n\\n@here Immediate attention required\\nView details: {dashboard_url}"
        },
        "sms": {
          "message": "SECURITY INCIDENT: {incident_id} ({severity}) - {incident_type} detected. Check email/dashboard for details."
        }
      }
    },
    "escalation_alert": {
      "title": "Incident Escalation Alert",
      "description": "Escalation notification for high-priority incidents",
      "channels": ["email", "sms", "phone_call"],
      "templates": {
        "email": {
          "subject": "[ESCALATION] Security Incident {incident_id} - {escalation_reason}",
          "body": {
            "header": "INCIDENT ESCALATION REQUIRED",
            "urgency": "This incident requires immediate escalation and management attention.",
            "escalation_details": {
              "incident_id": "Incident ID: {incident_id}",
              "current_severity": "Current Severity: {current_severity}",
              "escalation_reason": "Escalation Reason: {escalation_reason}",
              "time_elapsed": "Time Since Detection: {time_elapsed}",
              "business_impact": "Business Impact: {business_impact}"
            },
            "required_actions": [
              "Review incident status and approve escalation",
              "Allocate additional resources if needed",
              "Consider external communication requirements",
              "Activate crisis management team if required"
            ],
            "next_steps": "Next update will be provided within {update_interval} hours."
          }
        },
        "sms": {
          "message": "ESCALATION: Incident {incident_id} requires management attention. Impact: {business_impact}. Time: {time_elapsed}."
        }
      }
    },
    "status_update": {
      "title": "Incident Status Update",
      "description": "Regular status update template",
      "channels": ["email", "slack"],
      "templates": {
        "email": {
          "subject": "Update: Security Incident {incident_id} - {current_status}",
          "body": {
            "header": "INCIDENT STATUS UPDATE",
            "incident_summary": "Incident: {incident_id} | Type: {incident_type} | Severity: {severity}",
            "timeline": {
              "detection": "Detected: {detection_time}",
              "first_response": "First Response: {first_response_time}",
              "last_update": "Last Update: {last_update_time}",
              "current_status": "Current Status: {current_status}"
            },
            "progress_summary": "{progress_summary}",
            "actions_completed": [
              {actions_completed}
            ],
            "next_steps": [
              {next_steps}
            ],
            "eta_resolution": "Estimated Resolution: {eta_resolution}",
            "contact": "Questions: {contact_info}"
          }
        },
        "slack": {
          "message": "ðŸ“Š *INCIDENT UPDATE* ðŸ“Š\\n\\n*Status:* {current_status}\\n*Progress:* {progress_summary}\\n\\n*Next Steps:*\\n{next_steps}\\n\\nETA: {eta_resolution}"
        }
      }
    },
    "customer_notification": {
      "title": "Customer Security Notice",
      "description": "Customer notification for incidents with customer impact",
      "channels": ["email", "website_post"],
      "templates": {
        "email": {
          "subject": "Important Security Notice - {organization_name}",
          "body": {
            "header": "IMPORTANT SECURITY NOTICE",
            "customer_salutation": "Dear {customer_name},",
            "incident_summary": "We are writing to inform you of a security incident that may have affected your account or personal information.",
            "incident_details": {
              "discovery_date": "Date Discovered: {discovery_date}",
              "affected_data": "Information Involved: {affected_data_types}",
              "scope": "Customers Affected: {affected_customers_count}",
              "investigation": "Investigation Status: {investigation_status}"
            },
            "immediate_actions": "We have taken immediate steps to secure our systems and prevent further unauthorized access.",
            "protective_measures": "Protective measures implemented:",
            "measures_taken": [
              "Secured affected systems",
              "Enhanced monitoring",
              "Engaged cybersecurity experts",
              "Law enforcement notification (if applicable)"
            ],
            "customer_guidance": {
              "title": "What You Should Do:",
              "actions": [
                "Monitor your account for suspicious activity",
                "Change your password if prompted",
                "Review account statements",
                "Consider credit monitoring services"
              ]
            },
            "contact_information": {
              "dedicated_hotline": "Dedicated Hotline: {customer_hotline}",
              "email_support": "Email Support: {customer_email}",
              "website": "Information: {customer_website}"
            },
            "apology": "We sincerely apologize for this incident and any inconvenience it may cause.",
            "closing": "We will continue to keep you informed of our progress."
          }
        }
      }
    },
    "regulatory_notification": {
      "title": "Regulatory Authority Notification",
      "description": "Template for regulatory notification requirements",
      "channels": ["email", "secure_portal"],
      "templates": {
