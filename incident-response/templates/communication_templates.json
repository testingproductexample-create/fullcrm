  "communication_workflow": {
    "incident_lifecycle": {
      "detection": {
        "initial_notification": "incident_notification",
        "recipients": ["security_team", "incident_commander"]
      },
      "escalation": {
        "escalation_alert": "escalation_alert",
        "recipients": ["management", "stakeholders"]
      },
      "investigation": {
        "status_update": "status_update",
        "frequency": "every_2_hours",
        "recipients": ["all_stakeholders"]
      },
      "resolution": {
        "resolution_notification": "resolution_notification",
        "recipients": ["all_stakeholders"]
      }
    },
    "review_approval": {
