          "body": {
            "header": "REGULATORY NOTIFICATION",
            "regulatory_salutation": "Dear {regulatory_authority},",
            "compliance_framework": "This notification is made pursuant to {regulatory_framework} requirements.",
            "incident_classification": {
              "incident_type": "Incident Type: {incident_type}",
              "discovery_date": "Date of Discovery: {discovery_date}",
              "discovery_method": "Method of Discovery: {discovery_method}",
              "data_affected": "Personal Data Affected: {data_types_affected}"
