  "escalation_procedures": {
    "severity_escalation": {
      "critical": {
        "immediate_contacts": [
          "CISO",
          "CEO", 
          "Legal Counsel",
          "Communications Director"
        ],
        "notification_timeframe": "15 minutes",
        "communication_channels": ["phone", "email", "sms"],
        "approval_required": ["CEO", "Legal Counsel"]
      },
      "high": {
        "immediate_contacts": [
          "CISO",
          "IT Director",
          "Communications Director"
        ],
        "notification_timeframe": "1 hour",
        "communication_channels": ["email", "slack"],
        "approval_required": ["CISO"]
      },
      "medium": {
        "immediate_contacts": [
          "Security Manager",
          "IT Manager"
        ],
        "notification_timeframe": "4 hours",
        "communication_channels": ["email"],
        "approval_required": ["Security Manager"]
      }
    },
    "stakeholder_matrix": {
