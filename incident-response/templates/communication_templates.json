    "media_statement": {
      "title": "Media Statement Template",
      "description": "Template for media communications",
      "channels": ["press_release", "social_media"],
      "templates": {
        "press_release": {
          "title": "{organization_name} Issues Statement on Security Incident",
          "body": {
            "dateline": "LOCATION, DATE - {organization_name} today issued the following statement regarding a recent security incident:",
            "statement": "\"{media_statement}\"",
            "background": {
              "title": "Background:",
              "content": "The incident was detected on {detection_date} and immediately contained. We are working with leading cybersecurity experts to investigate the matter and enhance our security measures."
            },
            "actions_taken": {
              "title": "Actions Taken:",
              "measures": [
                "Secured affected systems immediately",
                "Implemented additional security measures",
                "Notified relevant authorities",
                "Engaged third-party security experts"
              ]
            },
            "customer_impact": {
              "title": "Customer Impact:",
              "content": "We are in the process of notifying affected customers directly. {impact_summary}"
            },
            "future_protection": {
              "title": "Future Protection:",
              "content": "We are committed to protecting our customers' information and will continue to invest in advanced security technologies and practices."
            },
            "contact": "For media inquiries, contact: {media_contact}"
          }
        },
        "social_media": {
          "twitter": "Security Update: {organization_name} recently experienced a security incident that we have contained. We are investigating and will provide updates. Customer impact: {impact_summary} #cybersecurity",
          "linkedin": "Security Incident Update: {organization_name} experienced a security incident that we immediately contained. We are working with experts to enhance our security. Customer impact: {impact_summary}"
        }
      }
    },
    "internal_communication": {
      "title": "Internal Team Communication",
      "description": "Internal stakeholder communication template",
      "channels": ["email", "slack", "teams"],
      "templates": {
        "email": {
          "subject": "All Hands: Security Incident Update - {incident_id}",
          "body": {
            "header": "ALL HANDS SECURITY INCIDENT UPDATE",
            "summary": "Team, I want to provide you with an update on the security incident that occurred {time_ago}.",
            "incident_overview": {
              "discovery": "The incident was discovered during routine monitoring on {discovery_time}.",
              "immediate_response": "Our incident response team was activated immediately and has been working around the clock.",
              "current_status": "As of this update, the situation is {current_status}."
            },
            "what_we_know": {
              "title": "What We Know:",
