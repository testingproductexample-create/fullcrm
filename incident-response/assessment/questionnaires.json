  "scoring_methodology": {
    "calculation": {
      "max_score_per_question": 3,
      "question_weights": {
        "critical": 3,
        "high": 2,
        "medium": 1,
        "low": 0.5
      }
    },
    "risk_levels": {
      "low": {
        "range": [0, 40],
        "description": "Low risk - basic security controls in place",
        "recommendations": [
          "Continue current security practices",
          "Implement additional monitoring capabilities",
          "Regular security awareness training"
        ]
      },
      "medium": {
        "range": [40, 70],
        "description": "Medium risk - some gaps in security controls",
        "recommendations": [
          "Address identified security gaps",
          "Enhance security monitoring",
          "Implement additional access controls"
        ]
      },
      "high": {
        "range": [70, 85],
        "description": "High risk - significant security weaknesses",
        "recommendations": [
          "Immediate action required to address security gaps",
          "Implement comprehensive security program",
          "Consider external security assessment"
        ]
      },
      "critical": {
        "range": [85, 100],
        "description": "Critical risk - major security deficiencies",
        "recommendations": [
          "Immediate remediation required",
          "Consider complete security program overhaul",
          "Engage external security experts"
        ]
      }
    }
  },
